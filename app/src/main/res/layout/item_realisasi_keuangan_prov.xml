<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    //line
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    //line
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/grey_3"/>

    //Header
    <LinearLayout
        android:id="@+id/lyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/spacing_middle"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/grey_1000"
            android:text="Category Name"/>

        <ImageButton
            android:id="@+id/imbExpand"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/grey_60"
            app:srcCompat="@drawable/ic_expand_arrow" />

    </LinearLayout>

    //Detail
    <LinearLayout
        android:id="@+id/lyExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_middle"
        android:paddingRight="@dimen/spacing_middle"
        android:paddingBottom="@dimen/spacing_middle"
        android:orientation="vertical"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_condensed_light"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_80"
                android:text="PAGU"/>

            <TextView
                android:id="@+id/tvPagu"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/blue_grey_800"
                android:text="99.9 M" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="10sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:orientation="horizontal"
            android:padding="0dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imvSmartIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_outline_arrow_upward"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/spacing_xxlarge"
                android:fontFamily="@font/roboto_condensed_light"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_80"
                android:text="SMART" />

            <TextView
                android:id="@+id/tvSmartValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/blue_grey_800"
                android:text="123.5 M" />

            <TextView
                android:id="@+id/tvSmartPercent"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/colorPrimaryDark"
                android:text="93.71%" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            android:orientation="horizontal"
            android:padding="0dp">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/imvMpoIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_outline_arrow_downward"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/spacing_xxlarge"
                android:fontFamily="@font/roboto_condensed_light"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/grey_80"
                android:text="MPO" />

            <TextView
                android:id="@+id/tvMpoValue"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/blue_grey_800"
                android:text="999.9 M" />

            <TextView
                android:id="@+id/tvMpoPercent"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/colorPrimaryDark"
                android:text="88.82%" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>