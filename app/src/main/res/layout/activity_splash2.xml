<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:paddingBottom="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_mpogo_100" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Model Pelaporan Online GO"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_mlarge" />

        <TextView
            android:id="@+id/company1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direktorat Jenderal Prasarana dan Sarana Pertanian"
            android:textAlignment="center"
            android:textSize="13dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/company2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kementerian Pertanian"
            android:textAlignment="center"
            android:textSize="13dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/company3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Republik Indonesia"
            android:textAlignment="center"
            android:textSize="13dp"
            android:textColor="#000"/>

    </LinearLayout>


</LinearLayout>